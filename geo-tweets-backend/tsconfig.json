{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": ["node"],
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ]
  },
  "exclude": ["node_modules", "dist"]
}
